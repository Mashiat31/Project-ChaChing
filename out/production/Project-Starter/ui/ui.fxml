<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.Controller">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#openFile" text="Open…" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Save" fx:id="saveMenuButton" onAction="#saveFile"/>
            <MenuItem mnemonicParsing="false" text="Save As…" fx:id="saveAsMenuButton" onAction="#saveFileAs" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Quit" onAction="#quitApplication" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Account">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#addAccount" text="Add Account" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <SplitPane dividerPositions="0.29797979797979796" prefHeight="400.0" prefWidth="680.0">
              <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="398.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="accountListView" prefHeight="398.0" prefWidth="198.0" />
                     </children>
                  </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="370.0" prefWidth="480.0">
                     <children>
                        <Text layoutX="25.0" layoutY="33.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Balance" fx:id="balanceLabel" />
                        <Text layoutX="141.0" layoutY="33.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Budget" fx:id="budgetLabel" />
                        <Button fx:id="addTransactionMenuButton" layoutX="301.0" layoutY="15.0" mnemonicParsing="false" onAction="#addTransaction" text="Add Transaction" />
                        <TableView fx:id="transactionTable" layoutY="65.0" prefHeight="333.0" prefWidth="472.0">
                          <columns>
                            <TableColumn fx:id="transactionTypeColumn" prefWidth="75.0" text="Type" />
                            <TableColumn fx:id="transactionAmountColumn" prefWidth="123.0" text="Amount" />
                            <TableColumn fx:id="transactionTagColumn" prefWidth="225.0" text="Tag" />
                          </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
              </items>
            </SplitPane>
      </children>
    </AnchorPane>
  </children>
</VBox>
